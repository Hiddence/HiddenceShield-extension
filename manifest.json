{
  "manifest_version": 3,
  "name": "Hiddence Shield",
  "version": "1.0.3",
  "description": "Hiddence Shield: a fast, reliable VPN for anonymity and data protection.",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "proxy",
    "storage",
    "privacy",
	  "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://www.cloudflare.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon-16.png",
      "48": "img/icon-48.png",
      "128": "img/icon-128.png"
    }
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}
